{
  "server": {
    "port": 3000,
    "host": "localhost",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000"]
    }
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "myapp_dev",
    "pool": {
      "min": 2,
      "max": 20,
      "idleTimeoutMs": 30000
    }
  },
  "auth": {
    "jwt": {
      "expiresIn": "24h",
      "algorithm": "HS256"
    },
    "session": {
      "ttlHours": 24,
      "maxSessions": 5
    },
    "password": {
      "minLength": 8,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumber": true
    }
  },
  "logging": {
    "level": "info",
    "format": "pretty"
  },
  "rateLimit": {
    "windowMs": 60000,
    "max": 100
  }
}
